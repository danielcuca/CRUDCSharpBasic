@model List<CRUDBasicCSharp.Models.Pessoa>
<h2>Pessoa</h2>
<br />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<a href="/Pessoa/Adicionar">Adicionar</a>

<table>
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Endereco</th>
        <th>Telefone</th>
        <th>CpfOuCnpj</th>
        <th>Ação</th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>@item.Id</td>
        <td>@item.Nome</td>
        <td>@item.Endereco</td>
        <td>@item.Telefone</td>
        <td>@item.CpfOuCnpj</td>
        <td>
            <a class="bi bi-eye-fill" href="/Pessoa/Visualizar/@item.Id"></a>
            <a class="bi bi-pencil-fill" href="/Pessoa/Alterar/@item.Id"></a>
            <a class="bi bi-trash" href="/Pessoa/MostrarExcluir/@item.Id"></a>
        </td>
    </tr>
}
</table>
